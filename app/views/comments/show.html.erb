<p id="notice"><%= flash[:xaxa] %></p>
<table border="1px">
  <% @comments.each do |comment|%>
    <tr><th><h1><%=comment.title%></h1></th></tr>
    <tr><td><p><%=comment.content%></p></td></tr>
  <%end   %>
</table>
<%= form_tag("/comments/post", method: "post",id:"login") do %>
  <%= label_tag(:title, "Title:") %>
  <%= text_field_tag(:title,"",:required => true) %><br>
  <%= label_tag(:comment, "Content:") %>
  <%= text_area_tag(:comment,"",:required => true) %><br>
  <%= submit_tag("Comment") %>
<%end%>